<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos en tiempo real</title>
  </head>
  <body>
    <h1>PRODUCTOS EN TIEMPO REAL</h1>

    <ul id="listaProductos">
    </ul>

    <form id="formAgregarProducto">
        <label for="title">Nombre:</label>
        <input type="text" id="title" name="nombre" required>
        <br>
        <br>
        <label for="description">Descripción:</label>
        <input type="text" id="description" name="descripcion" required>
        <br>
        <br>
        <label for="price">Precio:</label>
        <input type="number" id="price" name="precio" required>
        <br>
        <br>
        <label for="code">Código del producto:</label>
        <input type="number" id="code" name="código" required>
        <br> 
        <br>
        <label for="stock">Stock:</label>
        <input type="text" id="stock" name="stock" required>
        <br>
        <br>
        <button type="submit">Agregar Producto</button>
    </form>
  </body>
<script src="socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>
</html>